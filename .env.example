# AtriuumCoverUploader Environment Configuration
# Copy this file to .env and fill in your values

# ===== GOOGLE CLOUD CONFIGURATION =====
# Google Cloud Service Account for Vertex AI
GOOGLE_CLOUD_PROJECT_ID=your-google-cloud-project-id
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/service-account-key.json

# Vertex AI Configuration
VERTEX_AI_LOCATION=us-central1
VERTEX_AI_MODEL=text-bison@001

# Google Books API Configuration
GOOGLE_BOOKS_API_KEY=your-google-books-api-key

# ===== ATRIUUM CONFIGURATION =====
# Atriuum SPA credentials and URLs
ATRIUUM_BASE_URL=https://your-library.atriuum.com
ATRIUUM_USERNAME=your-username
ATRIUUM_PASSWORD=your-password

# ===== APPLICATION CONFIGURATION =====
# Execution environment
ENVIRONMENT=development  # development, testing, production
EXECUTION_PLATFORM=termux  # termux, replit, github-actions

# Browser configuration
BROWSER_TYPE=selenium  # selenium, playwright
HEADLESS=false
BROWSER_TIMEOUT=30000

# Processing configuration
BATCH_SIZE=50
MAX_RETRIES=3
RETRY_DELAY=5

# Logging configuration
LOG_LEVEL=INFO
LOG_FILE=logs/atriuum_uploader.log

# ===== CLOUD TRIGGER CONFIGURATION =====
# Webhook URL for cloud execution (if using cloud platform)
CLOUD_WEBHOOK_URL=https://your-cloud-service.com/webhook
CLOUD_API_KEY=your-cloud-api-key

# ===== OPTIONAL: PROXY CONFIGURATION =====
# HTTP_PROXY=http://proxy:port
# HTTPS_PROXY=http://proxy:port
# NO_PROXY=localhost,127.0.0.1